@page
@model EmployeeManagementApp.Pages.Project.IndexModel
@{
    ViewData["Title"] = "View Projects";
}

<h2>Projects</h2>

<table class="table">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Employees</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@(project.EndDate.HasValue ? project.EndDate.Value.ToShortDateString() : "N/A")</td>
                <td>@string.Join(", ", project.EmployeeNames)</td>
                <td>@project.Cost</td>
            </tr>
        }
    </tbody>
</table>
