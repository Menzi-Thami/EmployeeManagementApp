@{
    Layout = "_LayoutEmployee";
}
@model IEnumerable<EmployeeManagementApp.Application.DTOs.ProjectDto>

<table>
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Employees</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.StartDate.ToString("MM/dd/yyyy")</td>
                <td>@project.EndDate?.ToString("MM/dd/yyyy")</td>
                <td>@string.Join(", ", project.EmployeeNames)</td>
                <td>@project.Cost.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
